<%- layout("layouts/boilerplate") %>
<h1>All Tutors</h1>
<div class="tutors__container">
  <ul>
    <% for (let tutor of tutorList) { %>
    <li>
      <!-- <%= tutor.name %></a> -
        Rating: <span><%= tutor.rating %>
        </span> -->
      <div class="tutor__container">
        <a href="tutors/<%= tutor._id %>">
          <div class="tutor__infoContainer">
            <div class="tutor__info">
              <div class="tutor__avatar"></div>
              <%- tutor.name %>
              <p>Teaches: <%= tutor.language.name %></p>
              <% if(tutor.students.length === 0) { %>
              <p>New, no students yet</p>
              <% } %>
            </div>
            <div class="tutor__details">
              <p class="tutor__rate">Hourly Rate: <%= tutor.hourlyRate %></p>
              <button id="bookButton" class="button">Book</button>
            </div>
          </div>
        </a>
      </div>
    </li>
    <% } %>
  </ul>
</div>
<script>
  let button = document.getElementById("bookButton");

  button.addEventListener("click", function (e) {
    e.preventDefault();
  });
</script>
